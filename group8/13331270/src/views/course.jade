extends layout

block content
  nav.navbar.navbar-default.navbar-fixed-top
    div.container-fluid.col-sm-offset-1.col-sm-8.col-md-offset-1.col-md-8
      div.collapse.navbar-collapse
        ul.nav.navbar-nav
          - var role = '老师'
          if data.user.role == 'student'
            - role = '同学'
          li
            a 欢迎您！ #{data.user.username} #{role} ！
          li
            a(href="/home") 首页
          li
            a(href="/signout") 登出
  span.clearfix

  div.col-sm-offset-1.col-sm-10
    div.page-header
      h2 #{data.course.courseName} 作业
    div.panel-group(role="tablist" aria-multiselectable="true")
      div.panel.panel-default
        div.panel-heading(role="tab" id="headingOne")
          h4.panel-title
            a(data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne")
              | 课程介绍
        div.panel-collapse.collapse(id="collapseOne" role="tabpanel" aria-labelledby="headingOne")
          div.panel-body
            p 老师：
              b #{data.course.creater}
            p 具体描述：
            blockquote
              !{data.course.detailDiscription}
      div.panel.panel-default
        div.panel-heading(role="tab" id="headingTwo")
          h4.panel-title
            a.collapsed(data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo")
              | 课程作业
        div.panel-collapse.collapse.in(id="collapseTwo" role="tabpanel" aria-labelledby="headingTwo")
          div.panel-body
            table.table.table-hover
              thead
                tr
                  th 序号
                  th 课程
                  th 描述
                  th deadline
              tbody
                tr
                  th(scope="row") 1
                  td Mark
                  td Otto
                  td @mdo
                tr
                  th(scope="row") 2
                  td Jacob
                  td Thornton
                  td @fat
                tr
                  th(scope="row") 3
                  td Larry
                  td the Bird
                  td @twitter
      div.panel.panel-default
        div.panel-heading(role="tab" id="headingThree")
          h4.panel-title
            a.collapsed(data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree")
              | 添加作业
        div.panel-collapse.collapse.in(id="collapseThree" role="tabpanel" aria-labelledby="headingThree")
          div.panel-body
            form.form-horizontal(action='/home', method="POST")
              div.form-group
                label(for="courseName" class="col-sm-2 control-label") 作业名称
                div.col-sm-8
                  input(type="text" name="courseName" class="form-control" id="courseName" maxlength='20' placeholder="标题 20字" required)
              div.form-group
                label(for="courseShortName" class="col-sm-2 control-label") 英文简称
                div.col-sm-8
                  input(type="text" name="courseShortName" class="form-control" id="courseShortName" maxlength='20' placeholder="English Only 20字母" required)
              div.form-group
                label(for="shortDiscription" class="col-sm-2 control-label") 简短描述
                div.col-sm-8
                  input(type="text" name="shortDiscription" class="form-control" id="shortDiscription" maxlength='20' placeholder="描述 20字" required)
              div.form-group
                label(for="detailDiscription" class="col-sm-2 control-label") 具体要求
                div.col-sm-8
                  textarea(name="detailDiscription" class="col-sm-12 textarea-discription")
              div.form-group
                label(for="deadline" class="col-sm-2 control-label") 截至时间
                div.col-sm-3
                  input(type="date" class="form-control" id="deadline")
              div.form-group
                div.col-sm-offset-2.col-sm-10
                  button(type="submit" class="btn btn-default") 确认
  span.clearfix
  div.text-center
    hr
    p Copyright © Modern Web Camp
  script(src="/javascript/main.js")

