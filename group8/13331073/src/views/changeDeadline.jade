extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Change Deadline
					div.signup-wall
						form(class='form-signin', action='/changeDeadline', method='POST')
							input(type='text', name='HomeworkDeadline', class='form-control', placeholder='New Deadline',required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Change
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}