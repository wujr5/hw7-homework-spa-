extends layout

user = #user
user_flag = #user_flag

block content

	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Welcome, #{user.lastName}.

			div.modal.fade(id='editor')
				div.modal-dialog
					div.modal-content
						div.modal-header
							button(type='button' class='close' data-dismiss='modal' aria-label='Close')
								span(aria-hidden='true') &times;
							h4.modal-title test
						div.modal-body
							form.form-horizontal
								div.control-group
								label.control-label(for='input01')
								div.controls
									input(type='text' class='form-control' aria-describedby='basic-addon1')
								div.control-group
								label.control-label(for='input01')
								div.controls
									input(type='text' class='form-control' aria-describedby='basic-addon1')
								div.control-group
								label.control-label(for='input01')
								div.controls
									textarea(class='form-control' rows='10' aria-describedby='basic-addon1')
						div.modal-footer
							button(type='button' id='cancel' class='btn btn-default' data-dismiss='modal') Cancel
							button(type='button' id='save' class='btn btn-success' data-dismiss='modal') Save changes

			table.table(id='specification')
				caption
					h3 Homework Specification
					if user_flag
						button(class='btn btn-sm btn-primary' id='new-spec') Create Specification
				thead
					tr
						if user_flag
							th
						th Title
						th Current Version
						th Deadline
						th Author
						th Content
					tbody

			table.table(class='#{user_flag}' id='homework')
				caption
					if user_flag
						h3 All Students' Homework
					else
						h3 My Homework
						button(class='btn btn-sm btn-primary' id='new-hw') Write Homework
				thead
					tr
						th
						th Title
						th Current Version
						th Last Modified
						th Author
						th Content
						th Grades
					tbody

			a(href='/signout', class='text-center new-account') Sign Out

	script(src='/scripts/jquery.min.js')
	script(src='/scripts/bootstrap.min.js')
	script(src='/scripts/home.js')
